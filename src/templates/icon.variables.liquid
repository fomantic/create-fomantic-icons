/* Icons */
@icon-map: {
{% for icon in icons.solid.icons -%}
  {{ icon.className | replace: ".", "_" }}: {{ icon.unicode }};
{% endfor -%}
};

@icon-aliases-map: {
{% for icon in icons.solid.aliases -%}
  {{ icon.className | replace: ".", "_" }}: {{ icon.unicode }};
{% endfor -%}
};

@icon-outline-map: {
